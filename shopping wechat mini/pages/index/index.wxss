.categoryList{
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.categoryList navigator{
  flex: 1;
  padding: 15rpx 30rpx;
}

.categoryList navigator image{
  width: 100%;
}

.floorTitle{
  padding: 0 5rpx 0 0;
}

.floorTitle image{
  width: 100%;
}

.productList{
  /* 清除浮动 */
  overflow: hidden;
}

.productList navigator{
  float: left;
  width: 33.33%;
}
/* 第一个图片的大小：232 x 386 */
.productList navigator:nth-child(n+2) {
  height: calc(33.33vw * 386 / 232 / 2 );
  padding-left: 10rpx;
}
.productList navigator:nth-child(2),.productList navigator:nth-child(3){
  padding-bottom: 10rpx;
}

.productList navigator image{
  width: 100%;
  height: 100%;
}



